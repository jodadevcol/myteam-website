---
import ActionButton from "../components/ActionButton.astro";
import SocialButtons from "../components/SocialButtons.astro";
import MyTeam from "../icons/MyTeam.astro";
---

<footer class="">
  <div class="relative bg-p-light-coral">
    <div
      class="absolute inset-0 mx-auto max-w-[1520px] bg-left-bottom bg-auto bg-no-repeat"
      style="background-image: url('./images/shapes/shape-footer.png');"
    >
    </div>

    <div
      class="relative flex items-center justify-around mx-auto max-w-6xl py-16 px-5"
    >
      <span class="text-5xl font-bold text-s-acramento-state-green">
        Ready to get started?
      </span>

      <ActionButton variant="primaryLight" href="/contact-us">
        <span>contact us</span>
      </ActionButton>
    </div>
  </div>

  <div class="bg-s-dark-green">
    <div
      class="flex items-center justify-between gap-x-5 mx-auto max-w-6xl py-12 px-5"
    >
      <div class="flex-auto">
        <a href="/" class="block w-full max-w-40 mb-6 text-white">
          <MyTeam />
        </a>

        <nav class="text-white">
          <ul class="flex gap-x-4">
            <li>
              <a href="/"> <span>home</span> </a>
            </li>

            <li>
              <a href="/about"> <span>about</span> </a>
            </li>
          </ul>
        </nav>
      </div>

      <address
        class="flex-auto text-sm font-semibold not-italic text-white opacity-60"
      >
        987 Hillcrest Lane <br />
        Irvine, CA <br />
        California 92714 <br />
        Call Us : 949-833-7432
      </address>

      <div class="flex flex-col items-end gap-y-10 flex-auto">
        <SocialButtons />

        <span class="text-sm font-semibold text-white opacity-60">
          Copyright 2020. All Rights Reserved
        </span>
      </div>
    </div>
  </div>
</footer>
